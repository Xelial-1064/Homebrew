	<element name="Prestige" type="Item" source="Multiclassing Variant Rules" id="ID_CLASS_FEATURE_PRESTIGE">
		<compendium display="false" />
		<description>
			<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
			<p>As a prestige class you can select an additional subclass from your base class.</p>
		</description>
		<setters>
			<set name="category">Optional Class Features</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<rules>
			<select type="Archetype" name="Prestige Subclass"/>
		</rules>
	</element>
	<element name="Dual Class" type="Class" source="Custom" id="ID_CUSTOM_CLASS_DUAL_CLASS">
		<description>
			<p>Dual Class description</p>
		</description>
		<sheet display="false">
			<description>Dual Class short description.</description>
		</sheet>
		<setters>
			<set name="short">Dual Class test.</set>
			<set name="hd">d10</set>
		</setters>
		<rules>
            <grant type="Class Feature" id="ID_CLASS_FEATURE_DUAL_CLASS_VARIANT_DICE" level="1" />
            <select type="Class Feature" name="Class" supports="Dual Class Selection" number="1" />
			<select type="Class Feature" name="Dual Class Selection" supports="Dual Class Selection" number="1" />
		</rules>
	</element>
